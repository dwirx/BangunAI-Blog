    },
    {
      "name": "fetch_last",
      "type": "bash",
      "description": "Fetch latest file for style reference",
      "input": "CATEGORY (writing/articles/read/daily)"
    },
    {
      "name": "write",
      "type": "bash",
      "description": "Write new content with frontmatter",
      "input": "CATEGORY, FILENAME, CONTENT"
    },
    {
      "name": "log",
      "type": "bash",
      "description": "Append log to today's daily note",
      "input": "CONTENT"
    },
    {
      "name": "read",
      "type": "bash",
      "description": "Smart read content by keyword",
      "input": "FILE (keyword)"
    }
  ],
  "categories": {
    "writing": {
      "path": "src/content/writing",
      "use_case": "Personal blog posts, tutorials, notes"
    },
    "articles": {
      "path": "src/content/articles",
      "use_case": "Long-form articles, deep dives"
    },
    "read": {
      "path": "src/content/read",
      "use_case": "Reading notes, book summaries"
    },
    "daily": {
      "path": "src/content/daily",
      "use_case": "Daily notes, logs, tasks"
    }
  },
  "frontmatter_fields": {
    "required": ["title", "slug", "summary", "type", "category", "tags", "date"],
    "optional": ["readingTime"],
    "types": {
      "title": "string",
      "slug": "string (kebab-case)",
      "summary": "string (1-2 sentences)",
      "type": "note|article|tutorial|guide",
      "category": "Tech|Life|Design|Business",
      "tags": "array",
      "date": "ISO timestamp",
      "readingTime": "number (minutes)"
    }
  },
